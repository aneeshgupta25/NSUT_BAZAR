<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="YOU ARE \n AT NSUT BAZAR!!"
        android:textColor="@color/green"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewWHY"
        android:textColor="@color/green_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="So, Why are you here??"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="serif"/>

    <TextView
        android:id="@+id/textViewWHYContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Well, Here you can make a list of items which you want to buy or have bought and can even have the price of those items in your pocket!! This app makes it more easy for you to keep a track of when you bought that item."
        app:layout_constraintTop_toBottomOf="@id/textViewWHY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="casual"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewFun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Functionalities this APP provides"
        app:layout_constraintTop_toBottomOf="@id/textViewWHYContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/green_light"
        android:fontFamily="serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewFun"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="If you don't have an account, don't forget to make one! \n\nThen start making your list, and if you feel you did a typo, don't worry (we got you covered). Just long press that item , remove it and make your list neat and clean. \n\nIf you exit the app, your list will be safely stored with us.. So, just relax, make your list, pick-up your bags and lets go shopping!!"
        android:fontFamily="casual"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>